<StackPanel Background="#2C3E50" Width="200" DockPanel.Dock="Left">
    <!-- Define a Style for the Buttons -->
    <StackPanel.Resources>
        <Style TargetType="Button">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5" >
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3B5998"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2A487B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </StackPanel.Resources>

    <Button Content="Home" />
    <Button Content="Data Visualization" />
    <Button Content="Performance Monitoring" />
    <Button Content="Bottleneck Analysis" />
    <Button Content="Alerts" />
    <Button Content="Reports" />
    <Button Content="Settings" />
    
    <!-- User Management Button, visible only if the user is an Admin -->
    <Button Content="User Management" 
            Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}" />
</StackPanel>

